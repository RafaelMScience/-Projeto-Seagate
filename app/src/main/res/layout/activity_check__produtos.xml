<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context=".Check_Produtos">

    <include
        android:id="@+id/my_toolbarCheck"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbarCheck"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=" Qual tipo de HD ? "
            android:textColor="@color/colorTextGreen"
            android:textSize="14sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <RadioGroup
                android:id="@+id/group1Cap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/check_Desktop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:duplicateParentState="false"
                    android:padding="10dp"
                    android:text="Desktop"
                    android:textColor="@color/colorTextGreen"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <RadioButton
                    android:buttonTint="@color/colorPrimary"
                    android:id="@+id/check_Servi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Servidores de pequeno porte"
                    android:textColor="@color/colorTextGreen"
                    android:textSize="14sp" />

                <RadioButton
                    android:buttonTint="@color/colorPrimary"
                    android:id="@+id/check_Vigilancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Vigilância eletrônica"
                    android:textColor="@color/colorTextGreen"
                    android:textSize="14sp" />
            </RadioGroup>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_barrac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:text="PRÓXIMO"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:clickable="true"
        android:onClick="BarrC"/>
</RelativeLayout>